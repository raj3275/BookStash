@page
@model BookStash.Pages.Authors.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Author</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Author.AuthorID" />
            <div class="form-group">
                <label asp-for="Author.AuthorName" class="control-label">Author Name</label>
                <input asp-for="Author.AuthorName" class="form-control" />
                <span asp-validation-for="Author.AuthorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.AboutAuthor" class="control-label">About Author</label>
                <textarea asp-for="Author.AboutAuthor" class="form-control" style="height: 150px; width: 500px;"></textarea>
                <span asp-validation-for="Author.AboutAuthor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
